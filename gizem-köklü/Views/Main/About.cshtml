@model List<gizem_köklü.Models.about>
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_CVLayout.cshtml";

}
<header id="header" class="header-top">
    <div class="container">

        <h1><a href="index.html">Gizem Köklü</a></h1>
        <h2>I'm a passionate <span>graphic designer</span> from New York</h2>

        <nav id="navbar" class="navbar nav-link">
            <ul>
                <li><a class="nav-link" href="/">Anasayfa</a></li>
                <li><a class="nav-link active" href="/Main/About">Hakkımda</a></li>
                <li><a class="nav-link" href="/Main/Resume">Özgeçmiş</a></li>
                <li><a class="nav-link" href="#services">Services</a></li>
                <li><a class="nav-link" href="/Main/Portfolio">Portfolio</a></li>
                <li><a class="nav-link" href="/Main/Contact">İletişim</a></li>
            </ul>
            <i class="bi bi-list mobile-nav-toggle"></i>
        </nav><!-- .navbar -->

        <div class="social-links">
            <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
            <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
            <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
            <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
        </div>

    </div>
</header><!-- End Header -->    


<!-- ======= About Section ======= -->
<div id="about" class="about pt-lg-5">
    <!-- ======= About Me ======= -->
    <div class="about-me container pt-5">

        <div class="section-title">
            <h2>Hakkımda</h2>
            <p>Daha fazla bilgi edinin.</p>
        </div>

        <div class="row">
            <div class="col-lg-4" data-aos="fade-right">
                <img src="~/cv2/Personal/assets/img/image.jpg" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                <h3>Full Stack Web Developer </h3>
                <p class="fst-italic">
                    Bilgisayar mühendisi olarak, kodları bir sanat eseri gibi şekillendirip, dijital dünyada yenilikçi çözümler üretiyorum.
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Doğum Tarihi:</strong> <span> @Model[0].birthday.Value.ToString("dd MMMM yyyy")</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Numara:</strong> <span>@Model[0].phone</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Konum:</strong> <span>@Model[0].city</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Çalışma Şekli:</strong> <span>@Model[0].workflow</span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@Model[0].age</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Eğitim:</strong> <span>@Model[0].degree</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Model[0].email</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@Model[0].website</span></li>

                        </ul>
                    </div>
                </div>
                <p>
                    Karmaşık algoritmaların ardındaki güzellikleri keşfetmeye tutkulu bir bilgisayar mühendisiyim. Teknoloji dünyasındaki her zorluk, benim için bir fırsat ve çözüm arayışıdır. Bu alandaki merakım ve yaratıcı yaklaşımım, bilgisayar mühendisliğine olan tutkumun bir yansımasıdır.
                </p>
            </div>
        </div>

    </div><!-- End About Me -->
    <!-- ======= Counts ======= -->
    <div class="counts container">

        <div class="row">

            <div class="col-lg-3 col-md-6">
                <div class="count-box">
                    <i class="bi bi-emoji-smile"></i>
                    <span data-purecounter-start="0" data-purecounter-end="@Model[0].experience" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Deneyim yılı</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mt-5 mt-md-0">
                <div class="count-box">
                    <i class="bi bi-journal-richtext"></i>
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.ProjectCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Projeler</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mt-5 mt-lg-0">
                <div class="count-box">
                    <i class="bi bi-headset"></i>
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.skills" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Kullanılan Teknoloji</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mt-5 mt-lg-0">
                <div class="count-box">
                    <i class="bi bi-award"></i>
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.sertifica" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Sertifikalar</p>
                </div>
            </div>

        </div>

    </div><!-- End Counts -->
    <!-- ======= Skills  ======= -->
    <div class="skills container">

        <div class="section-title">
            <h2>Yetenekler</h2>
        </div>

        <div class="row skills-content">

            <div class="col-lg-6">
                @{
                    foreach (var item in ViewBag.skillListIlkYarisi)
                    {
                        <div class="progress">
                            <span class="skill">@item.name <i class="val">@item.derece%</i></span>
                            <div class="progress-bar-wrap">
                                <div class="progress-bar" role="progressbar" aria-valuenow="@item.derece" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    }
                }

            </div>

            <div class="col-lg-6">

                @{
                    foreach (var item in ViewBag.skillListGeriKalan)
                    {
                        <div class="progress">
                            <span class="skill">@item.name <i class="val">@item.derece%</i></span>
                            <div class="progress-bar-wrap">
                                <div class="progress-bar" role="progressbar" aria-valuenow="@item.derece" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    }
                }

            </div>

        </div>

    </div><!-- End Skills -->
    <!-- ======= Interests ======= -->
    <div class="interests container">

        <div class="section-title mt-4">
            <h2>İlgi alanları</h2>
        </div>


        <div class="row">
            @{
                foreach (var item in ViewBag.ilgiler)
                {
                    <div class="col-lg-3 col-md-4 mt-3">
                        <div class="icon-box">
                            <i class="ri-gradienter-line" style="color: #ffa76e;"></i>
                            <h3>@item.name</h3>
                        </div>
                    </div>
                }
            }


        </div>

    </div><!-- End Interests -->


</div><!-- End About Section -->
